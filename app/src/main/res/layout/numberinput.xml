<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#99000000"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.avloop.simplerc.MainActivity">
    <Button android:id="@+id/no1"
        android:onClick="buttonClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <Button android:id="@+id/no2"
        android:onClick="buttonClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button android:id="@+id/no3"
        android:onClick="buttonClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    <Button android:id="@+id/no4"
        android:onClick="buttonClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_below="@+id/no1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />
    <Button android:id="@+id/no5"
        android:onClick="buttonClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_alignTop="@+id/no4"
        android:layout_alignStart="@+id/no2" />
    <Button android:id="@+id/no6"
        android:onClick="buttonClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:layout_alignTop="@+id/no4"
        android:layout_alignStart="@+id/no3" />
    <Button android:id="@+id/no7"
        android:onClick="buttonClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:layout_below="@+id/no4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />
    <Button android:id="@+id/no8"
        android:onClick="buttonClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:layout_alignTop="@+id/no7"
        android:layout_alignStart="@+id/no2" />
    <Button android:id="@+id/no9"
        android:onClick="buttonClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:layout_alignTop="@+id/no7"
        android:layout_alignStart="@+id/no3" />
    <Button android:id="@+id/no0"
        android:onClick="buttonClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_below="@+id/no8"
        android:layout_alignStart="@+id/no2"
        android:layout_marginTop="47dp" />
    <Button android:id="@+id/red"
        android:onClick="buttonClicked"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:background="#FFFF3333"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    <Button android:id="@+id/green"
        android:onClick="buttonClicked"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:background="#FF33FF33"
        android:layout_alignTop="@+id/yellow"
        android:layout_alignParentStart="true" />
    <Button android:id="@+id/yellow"
        android:onClick="buttonClicked"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:background="#FFFFBB33"
        android:layout_below="@+id/no0"
        android:layout_alignStart="@+id/blue" />
    <Button android:id="@+id/blue"
        android:onClick="buttonClicked"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:background="#FF3333FF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>